# AI Chatbot Admin Panel - Test Automation Environment Variables
# Copy this file to .env and update the values as needed

# Application Settings
BASE_URL=https://admin.aichatbot.com
API_BASE_URL=https://api.aichatbot.com

# Browser Settings
BROWSER=chrome
HEADLESS=false
IMPLICIT_WAIT=10000
PAGE_LOAD_TIMEOUT=30000
SCRIPT_TIMEOUT=30000

# Test Execution Settings
PARALLEL=false
MAX_INSTANCES=4
RETRY_COUNT=2
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=false

# Reporting Settings
GENERATE_HTML_REPORT=true
GENERATE_JSON_REPORT=true
GENERATE_JUNIT_REPORT=false
REPORT_PATH=./reports
SCREENSHOTS_PATH=./reports/screenshots

# Test Data Settings
TEST_DATA_PATH=./test-data

# Logging Settings
LOG_LEVEL=info
LOG_TIMESTAMP=true
LOG_COLORS=true

# Database Settings (if needed)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=test_db
DB_USER=test_user
DB_PASSWORD=test_password

# Email Settings (if needed)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_SECURE=false

# CI/CD Settings
PUBLISH=false
TAGS= 